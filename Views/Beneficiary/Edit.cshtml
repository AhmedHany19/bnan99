@model RentCar.Models.CR_Cas_Sup_Beneficiary

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CASLayout.cshtml";
}

<style>
    #save-btn {
        margin-right: 10px;
        background-color: #5bc0de !important;
        width: 80px;
        margin-left: 20px;
        margin-bottom: 10px;
    }

    #bttn {
        float: right;
        width: 80px;
        background-color: #5bc0de !important;
        margin-left: 20px;
    }

    #btn-confirm {
        float: right;
        width: 80px;
        margin-left: 20px;
    }

    .lbl {
        margin-right: 30px;
        font-size: 16px;
        font-family: 'Times New Roman';
    }

    .hidden {
        display: none
    }

    .text-danger {
        font-size: 12px;
        margin-right: 160px;
        font-family: 'Times New Roman';
    }

    .a {
        float: right;
        background-color: #5bc0de;
        width: 80px;
        height: 25px;
        padding-top: 5px;
        padding-right: 10px;
        font-size: 12px;
        font-family: times new roman;
    }

    .texterr {
        font-family: 'Times New Roman' !important;
        font-size: 14px !important;
        color: red !important;
        margin-right: 50% !important;
        height: 40px;
    }

    #asterisk {
        color: red;
        float: right;
        font-size: 15px !important;
        margin-right: 112px;
        margin-top: 5px;
        position: absolute;
        font-family: 'Times New Roman';
    }

    .title_corp {
        font-family: 'Times New Roman';
        font-size: 25px;
    }

    .subtitle_corp {
        padding-top: 3px !important;
        font-family: 'Times New Roman' !important;
        color: #083555;
    }
</style>
<div class="corp_content">
    <div class="title_corp"> المستفيدين /  تعديل البيانات</div>
    <div class="subtitle_corp"> تمكنك الصفحة من تعديل بيانات المستفيدين</div>
    <div class="hr_60"></div>
    <div class="hr_80"></div>
    <div class="corp_page">
        <div class="page_content">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal" style="height:50%">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col-md-6 offset-md-6 " style="margin-top:0px;">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Code, new { @class = "label_form col-md-6", style = "float:right;" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Code, new { @class = "input_form col-md-6", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_Commercial_Registration_No')", maxlength = "10", autocomplete = "off", htmlAttributes = new { tabindex = 1 }, style = "width:50%;", @Readonly = "readonly" })
                        <div style="color:red;float:left;font-size:20px;margin-left:244px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistCode</div>
                    </div>

                    @Html.HiddenFor(model => model.CR_Cas_Sup_Beneficiary_Lessor)
                    @Html.HiddenFor(model => model.CR_Cas_Sup_Beneficiary_Sector)


                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Commercial_Registration_No, new { @class = "input_form col-md-6", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_Ar_Long_Name')", maxlength = "100", autocomplete = "off", htmlAttributes = new { tabindex = 2 }, style = "width:50%;", @Readonly = "readonly" })
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Commercial_Registration_No, new { @class = "label_form col-md-6" })
                        <div style="color:red;float:left;font-size:20px;margin-left:244px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistCommercial</div>
                    </div>

                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Ar_Long_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Ar_Long_Name, new { @class = "input_form col-md-6", maxlength = "100", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_En_Long_Name')", autocomplete = "off", onkeypress = "return CheckArabicCharactersOnly(event);", style = "margin-left:-259px;width:450px;", htmlAttributes = new { tabindex = 3 } })
                        <div style="color:red;float:left;font-size:20px;margin-left:244px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistAr</div>
                    </div>
                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_En_Long_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_En_Long_Name, new { @class = "input_form col-md-6", maxlength = "100", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_Reasons')", autocomplete = "off", oninput = "this.value=this.value.replace(/[^a-zA-Z\\s]/g,'')", style = "margin-left:-259px;width:450px;", htmlAttributes = new { tabindex = 4 } })
                        <div style="color:red;float:left;font-size:20px;margin-left:244px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistEn</div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CR_Cas_Sup_Beneficiary_Status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CR_Cas_Sup_Beneficiary_Status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Reasons, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Reasons, new { @class = "input_form col-md-6", maxlength = "100", onkeyup = "movetoNext('add_btn')", autocomplete = "off", onkeypress = "return CheckArabicCharactersOnly(event);", style = "margin-left:-259px;width:450px;", htmlAttributes = new { tabindex = 4 } })
                    </div>

                    <div style="margin-top:50px;">
                        <div>

                            <input type="submit" name="save" value="حفظ" class="submit_btn" style="float: right;margin-right:29px;margin-top:90px;" />
                            <input type="submit" name="hold" class="submit_btn" value="@ViewBag.h" style=" margin-right: 20px; margin-top: 90px;" />
                            <input type="button" name="delete" class="submit_btn" id="btn-confirm" value="@ViewBag.stat" style="margin-right: 20px; margin-top: 90px; background-color: #F3B161;" />

                            <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal" style="margin-top:17%;">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel" style=" margin-right: 10%;">تأكيد</h4>
                                        </div>
                                        <div class="modal-footer">
                                            @if (ViewBag.delete == "D")
                                            {
                                                <input type="submit" name="delete" class="submit_btn" value="@ViewBag.stat" id="modal-btn-si" style="float:right;width:80px;height:40px;font:bold 14px Tahoma;margin-left:10px;color:white;background-color:#5cb85c;" />
                                            }
                                            else
                                            {
                                                <input type="submit" name="delete" class="submit_btn" value="@ViewBag.stat" id="modal-btn-si" style="float:right;width:80px;height:40px;font:bold 14px Tahoma;margin-left:10px;color:white;background-color:#d9534f;" />
                                            }
                                            <button type="button" class="btn btn-primary" id="modal-btn-no" style="float: left;width: 80px;height: 40px;font: bold 14px Tahoma">إلغاء</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6" style="margin-top:90px">
                                <a href="/Beneficiary/Index/" class="btn" style="color:white;background-color:#F3B161;width:80px!important;padding-right:27px!important;border-radius:unset;height:30px;padding-top:5px;float:left;font-size:15px!important;font-family:'Times New Roman';">انهاء</a>
                            </div>
                        </div>
                    </div>
                </div>
                if (@ViewBag.LRExistCode == null && @ViewBag.LRExistAr == null && @ViewBag.LRExistEn == null && @ViewBag.LRExistCommercial == null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }
                else if (@ViewBag.LRExistCode != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Commercial_Registration_No').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial == null && @ViewBag.LRExistAr != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Ar_Long_Name').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial == null && @ViewBag.LRExistAr == null && @ViewBag.LRExistEn != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_En_Long_Name').focus()</script>
                }
                else if (@ViewBag.LRExiLRExistCodestAr != null && @ViewBag.LRExistAr != null && @ViewBag.LRExistEn != null && @ViewBag.LRExistCommercial != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }

                <script>
                    var modalConfirm = function (callback) {

                        $("#btn-confirm").on("click", function () {
                            $("#mi-modal").modal('show');
                        });
                        $("#modal-btn-si").on("click", function () {
                            callback(true);
                            $("#mi-modal").modal('hide');
                        });
                        $("#modal-btn-no").on("click", function () {
                            callback(false);
                            $("#mi-modal").modal('hide');
                        });
                    };
                    modalConfirm(function (confirm) {
                        if (confirm) {
                            //Acciones si el usuario confirma
                            $("#form1").submit();
                        } else {
                            //Acciones si el usuario no confirma
                            $("#result").html("canceled");
                        }
                    });


                    
                </script>
                <script language="javascript" type="text/javascript">
                    // Allow Arabic Characters only
                    function CheckArabicCharactersOnly(e) {
                        var unicode = e.charCode ? e.charCode : e.keyCode
                        if (unicode != 8) { //if the key isn't the backspace key (which we should allow)
                            if (unicode == 32)
                                return true;
                            else {
                                if ((unicode > 48 || unicode < 57) && (unicode < 0x0600 || unicode > 0x06FF)) //if not a number or arabic
                                    return false; //disable key press
                            }
                        }
                    };
                    function movetoNext(nextFieldID) {
                        if (event.keyCode == 13) {
                            document.getElementById(nextFieldID).focus();
                        }
                    };




                    //////////////// disable auto validate on enter click ///////////////
                    $(document).keypress(function (e) {
                        if (e.keyCode === 13) {
                            e.preventDefault();
                            return false;
                        }
                    });
                                                                    ////////////////////////////////////////////////////////////////////
                </script>
               
            }
        </div>
    </div>
</div>