@model RentCar.Models.CR_Cas_Sup_Beneficiary

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CasLayout.cshtml";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .texterr {
        font-family: 'Times New Roman' !important;
        font-size: 14px !important;
        color: red !important;
        margin-right: 50% !important;
        height: 40px;
    }

    .title_corp {
        font-family: 'Times New Roman';
        font-size: 25px;
    }

    .subtitle_corp {
        padding-top: 3px !important;
        font-family: 'Times New Roman' !important;
        color: #083555;
    }
</style>
<div class="corp_content">
    <div class="title_corp"> المستفيدين / إضافة </div>
    <div class="subtitle_corp">تمكنك الصفحة من إضافة مستفيد جديد</div>
    <div class="hr_60"></div>
    <div class="hr_80"></div>
    <div class="corp_page">
        <div class="page_content" style=" margin-top: 10px; height:421px!important;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-6 offset-md-6 " style="margin-top:50px;">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Code, new { @class = "label_form col-md-6", style = "float:right;" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Code, new { @class = "input_form col-md-6", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_Commercial_Registration_No')", maxlength = "10", autocomplete = "off", htmlAttributes = new { tabindex = 1 }, style = "width:50%;" })
                        <div style="color:red;float:left;font-size:20px;margin-left:244px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistCode</div>
                    </div>

                    @Html.HiddenFor(model => model.CR_Cas_Sup_Beneficiary_Lessor)
                    @Html.HiddenFor(model => model.CR_Cas_Sup_Beneficiary_Sector)


                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Commercial_Registration_No, new { @class = "input_form col-md-6", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_Ar_Long_Name')", maxlength = "10", autocomplete = "off", htmlAttributes = new { tabindex = 2 }, style = "width:50%;" })
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Commercial_Registration_No, new { @class = "label_form col-md-6" })
                        <div style="color:red;float:left;font-size:20px;margin-left:60px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistCommercial</div>
                    </div>

                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Ar_Long_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_Ar_Long_Name, new { @class = "input_form col-md-6", maxlength = "200", onkeyup = "movetoNext('CR_Cas_Sup_Beneficiary_En_Long_Name')", autocomplete = "off", onkeypress = "return CheckArabicCharactersOnly(event);", style = "margin-left:-265px;width:450px;", htmlAttributes = new { tabindex = 3 } })
                        <div style="color:red;float:left;font-size:20px;margin-left:60px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistAr</div>
                    </div>
                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_En_Long_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Cas_Sup_Beneficiary_En_Long_Name, new { @class = "input_form col-md-6", maxlength = "200", onkeyup = "movetoNext('add_btn')", autocomplete = "off", oninput = "this.value=this.value.replace(/[^a-zA-Z\\s]/g,'')", style = "margin-left:-265px;width:450px;", htmlAttributes = new { tabindex = 4 } })
                        <div style="color:red;float:left;font-size:20px;margin-left:60px;margin-top:-25px;">*</div>
                        <div class="texterr">@ViewBag.LRExistEn</div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CR_Cas_Sup_Beneficiary_Fr_Long_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CR_Cas_Sup_Beneficiary_Status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CR_Cas_Sup_Beneficiary_Status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        @Html.LabelFor(model => model.CR_Cas_Sup_Beneficiary_Reasons, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CR_Cas_Sup_Beneficiary_Reasons, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CR_Cas_Sup_Beneficiary_Reasons, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6" style="margin-top:30px;">
                    <div style="height:110px;"></div>
                    <a href="/Beneficiary/Index/" tabindex="" class="btn" style="font-family:'Times New Roman';float:left;font-size:15px!important;width: 70px !important;padding-top:4px;height:30px; background-color: #F3B161; padding-right: 22px; border-radius: 0px; color: white;">انهاء</a>
                </div>
                <div class="col-md-6" style="margin-top:30px;">
                    <div style="height:110px;"></div>
                    <input type="submit" tabindex="" name="add" class="submit_btn" id="add_btn" value="حفظ" />
                </div>
                <div class="col-md-6" id="Message" style="font-family:'Times New Roman';font-size:16px;color:red;margin-Top: 380px; margin-right: 330px;position:absolute;">@TempData["TempModel"]</div>

                if (@ViewBag.LRExistCode == null && @ViewBag.LRExistAr == null && @ViewBag.LRExistEn == null && @ViewBag.LRExistCommercial == null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }
                else if (@ViewBag.LRExistCode != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Commercial_Registration_No').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial == null && @ViewBag.LRExistAr != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Ar_Long_Name').focus()</script>
                }
                else if (@ViewBag.LRExistCode == null && @ViewBag.LRExistCommercial == null && @ViewBag.LRExistAr == null && @ViewBag.LRExistEn != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_En_Long_Name').focus()</script>
                }
                else if (@ViewBag.LRExiLRExistCodestAr != null && @ViewBag.LRExistAr != null && @ViewBag.LRExistEn != null && @ViewBag.LRExistCommercial != null)
                {
                    <script>document.getElementById('CR_Cas_Sup_Beneficiary_Code').focus()</script>
                }

                <script type="text/javascript">
                    $(document).ready(function () { setTimeout(function () { $("#Message").fadeOut(); }, 4000); });
                </script>
                <script language="javascript" type="text/javascript">
                    // Allow Arabic Characters only
                    function CheckArabicCharactersOnly(e) {
                        var unicode = e.charCode ? e.charCode : e.keyCode
                        if (unicode != 8) { //if the key isn't the backspace key (which we should allow)
                            if (unicode == 32)
                                return true;
                            else {
                                if ((unicode > 48 || unicode < 57) && (unicode < 0x0600 || unicode > 0x06FF)) //if not a number or arabic
                                    return false; //disable key press
                            }
                        }
                    }
                    function movetoNext(nextFieldID) {
                        if (event.keyCode == 13) {
                            document.getElementById(nextFieldID).focus();
                        }
                    };



                    //////////////// disable auto validate on enter click ///////////////
                    $(document).keypress(function (e) {
                        if (e.keyCode === 13) {
                            e.preventDefault();
                            return false;
                        }
                    });
                                                    ////////////////////////////////////////////////////////////////////


                </script>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
        window.addEventListener("load", function () {

            if ('@TempData["TempModel"]'!="") {
                toastr.success("تم الحفظ بنجاح");
            }

        });
</script>