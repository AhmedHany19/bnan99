@model IEnumerable<RentCar.Models.BranchSys.CarInfoPrice>
@{
    Layout = "~/Views/Shared/_LayoutSys3Home.cshtml";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
