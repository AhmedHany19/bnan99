    <!-- Wrapper for slides -->
    <div class="carousel-inner" style="background-color:white;font-family:Arial !important; height:375px ">

        @{
            int i = 0;
            foreach (var item in Model)
            {
                i++;
                if (i == 1)
                {
                    <div class="item active">
                        <div style="width: 100%; height: 50px;float:right; padding-right: 15px; line-height: 1.5;padding-top:10px; ">
                            <label style="color:black;width:40%">@item.CR_Cas_Sup_Car_Collect_Ar_Name</label>

                            <img src="~/BSys3Styles/Images/ic2.png" style="margin-top: 0px;height:16px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Door_No</label>

                            <img src="~/BSys3Styles/Images/ic1.png" style="margin-top: 0px;height:16px">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Passengers_No</label>

                            <img src="~/BSys3Styles/Images/ic3.png" style="height:16px; margin-top: 0px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Bag_Bags</label>
                            <img src="~/BSys3Styles/Images/ic3.png" style="height: 11px; margin-top: 2.5px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Small_Bags</label>


                            @{
                                var floatConvert = (float)item.CR_Cas_Sup_Car_No_Current_Meter;
                                var currentMeter = floatConvert.ToString("N0");
                            }

                            <label id="myNumber" style="color: black; width: 10%; float: left;"> @currentMeter</label>
                            <label style="color: black; width: 10%; float: left;">القرائة الحالية :</label>

                        </div>
                        <div style="width: 25%; height: 50px;float:right; padding-left: 15px; line-height: 50px;text-align:center;" hidden>

                        </div>
                        <div style="width: 100%; height: 250px; float: left;padding-right:0px;">
                            <img src="@Url.Content(item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Picture)" style="width: 75%; float: right; height: 250px; object-fit: contain; " />

                            <div style="width: 25%; height: 250px; float: left; padding-right: 15px; text-align: right; ">

                                <label style="color: black; width: 100%; float: right;font-size:16px;font-weight:700;text-align:center;padding-right:0px;">الأسباب</label>
                                @if (item.CR_Cas_Sup_Car_Status == "M")
                                {
                                    <label style="color: red; text-align:center; width:100%"> صيانة </label>
                                }
                                @if (item.CR_Cas_Sup_Car_Status == "O")
                                {
                                    <label style="color: red; text-align:center; width:100%">للبيع</label>
                                }
                                @if (item.CR_Cas_Car_Price_Basic_Status != "1")
                                {
                                    <label style="color: red; text-align:center; width:100%">راجع سعر السيارة</label>
                                }
                                @if (item.CR_Cas_Sup_Car_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%"> السيارة موقوفة</label>
                                }
                                @if (item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%">الفرع موقوف</label>
                                }
                                @if (item.CR_Cas_Sup_Owners.CR_Cas_Sup_Owners_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%">المالك موقوف</label>
                                }
                            </div>

                        </div>
                        <div style=" width: 25%; height: 70px;float:right; padding-right: 15px; line-height: 1.7;">

                        </div>



                    </div>

                }
                else
                {
                    <div class="item">
                        <div style="width: 100%; height: 50px;float:right; padding-right: 15px; line-height: 1.5;padding-top:10px; ">
                            <label style="color:black;width:40%">@item.CR_Cas_Sup_Car_Collect_Ar_Name</label>

                            <img src="~/BSys3Styles/Images/ic2.png" style="margin-top: 0px;height:16px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Door_No</label>

                            <img src="~/BSys3Styles/Images/ic1.png" style="margin-top: 0px;height:16px">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Passengers_No</label>

                            <img src="~/BSys3Styles/Images/ic3.png" style="height:16px; margin-top: 0px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Bag_Bags</label>
                            <img src="~/BSys3Styles/Images/ic3.png" style="height: 11px; margin-top: 2.5px;">
                            <label style="color: black; width: 3%;">@item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Small_Bags</label>


                            @{
                                var floatConvert = (float)item.CR_Cas_Sup_Car_No_Current_Meter;
                                var currentMeter = floatConvert.ToString("N0");
                            }

                            <label id="myNumber" style="color: black; width: 10%; float: left;"> @currentMeter</label>
                            <label style="color: black; width: 10%; float: left;">القرائة الحالية :</label>

                        </div>
                        <div style="width: 25%; height: 50px;float:right; padding-left: 15px; line-height: 50px;text-align:center;" hidden>

                        </div>
                        <div style="width: 100%; height: 250px; float: left;padding-right:0px;">
                            <img src="@Url.Content(item.CR_Mas_Sup_Category_Car.CR_Mas_Sup_Category_Car_Picture)" style="width: 75%; float: right; height: 250px; object-fit: contain; " />

                            <div style="width: 25%; height: 250px; float: left; padding-right: 15px; text-align: right; ">

                                <label style="color: black; width: 100%; float: right;font-size:16px;font-weight:700;text-align:center;padding-right:0px;">الأسباب</label>

                                @*@if (item.CR_Cas_Sup_Car_Maintenance_Status == false)
                                {
                                    <label style="color: red; text-align:center; width:100%">راجع صيانة السيارة</label>
                                }*@


                                @*@if (item.CR_Cas_Sup_Car_Documentation_Status == false)
                                {
                                    <label style="color: red; text-align:center; width:100%">راجع وثائق السيارة</label>
                                }*@
                                @if (item.CR_Cas_Car_Price_Basic_Status != "1")
                                {
                                    <label style="color: red; text-align:center; width:100%">راجع سعر السيارة</label>
                                }

                                @if (item.CR_Cas_Sup_Car_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%">السيارة موقوفة</label>
                                }
                                @if (item.CR_Cas_Sup_Car_Status == "R")
                                {
                                    <label style="color: red; text-align:center; width:100%">مؤجرة</label>
                                }
                                @if (item.CR_Cas_Sup_Car_Status == "O")
                                {
                                    <label style="color: red; text-align:center; width:100%">مباعة</label>
                                }
                                @if (item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%">الفرع موقوف</label>
                                }
                                @if (item.CR_Cas_Sup_Owners.CR_Cas_Sup_Owners_Status == "H")
                                {
                                    <label style="color: red; text-align:center; width:100%">المالك موقوف</label>
                                }
                            </div>

                        </div>
                        <div style=" width: 25%; height: 70px;float:right; padding-right: 15px; line-height: 1.7;">

                        </div>

                    </div>
                }

            }
        }
    <div class="row " style="padding-top:30px;padding-bottom:10px;width:48%">
        <label class="text-center" style="width:100%;text-align:center;font-size:22px;font-weight:bold"> السيارات الغير متاحة</label>
    </div>
        
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="fa fa-angle-left" style="font-size: 40px; color: #EDA63C;margin-top:180px;"> </span>
        <span class="sr-only"> Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="fa fa-angle-right" style="font-size: 40px; color: #EDA63C;margin-top:180px;"> </span>
        <span class="sr-only"> Next</span>
    </a>
</div>


