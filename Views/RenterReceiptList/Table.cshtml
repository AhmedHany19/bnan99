@model IEnumerable<RentCar.Models.CR_Cas_Account_Receipt>

<table class="table" id="table">
    <thead>
        <tr>
            <th width="2%" class="text-center">
                م
            </th>
            <th width="14%">
                رقم القيد
            </th>
            <th width="10%">
                تاريخ القيد
            </th>

            <th class="text-left" width="8%">
                نوع المرجع
            </th>

            <th width="10%">
                دائن
            </th>
            <th width="10%">
                مدين
            </th>
            <th width="10%">
                رصيد سابق
            </th>
            <th class="text-left" width="20%">
                منفذ العملية
            </th>
            <th hidden>
                حالة العهدة
            </th>
            <th width="20%" class="text-left">
                الملاحظات
            </th>

        </tr>
    </thead>
    <tbody id="tbl" class="text-center">
        @{ int c = 0;
            foreach (var item in Model)
            {
                c += 1;

                <tr>
                    <td width="2%" >
                                <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                                    @c
                                </a>
                    </td>
                    <td class="text-center" width="14%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)
                        </a>

                    </td>
                    <td width="10%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @item.CR_Cas_Account_Receipt_Date.Value.ToString("yyyy/MM/dd")
                        </a>
                    </td>

                    <td class="text-left" width="8%"> 
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_Reference_Type)
                        </a>
                    </td>

                    <td width="10%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_Payment)
                        </a>
                    </td>
                    <td width="10%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_Receipt)
                        </a>
                    </td>
                    <td width="10%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_Renter_Previous_Balance)
                        </a>
                    </td>
                    <td class="text-left" width="20%">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_User_Information.CR_Cas_User_Information_Ar_Name)
                        </a>
                    </td>
                    <td hidden>
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @if (item.CR_Cas_Account_Receipt_Is_Passing == "1")
                            {
                                <label>عهدة</label>
                            }
                            @if (item.CR_Cas_Account_Receipt_Is_Passing == "2")
                            {
                                <label>مرحل</label>
                            }
                            @if (item.CR_Cas_Account_Receipt_Is_Passing == "3")
                            {
                                <label>محجوز</label>
                            }
                        </a>
                    </td>

                    <td width="20%" class="text-left">
                        <a href="~/RenterReceiptList/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_No)">
                            @Html.DisplayFor(modelItem => item.CR_Cas_Account_Receipt_Reasons)
                        </a>
                    </td>
                </tr>

                }
            }
        </tbody>

</table>
