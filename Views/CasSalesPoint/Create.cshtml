@model RentCar.Models.CR_Cas_Sup_SalesPoint

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CASLayout.cshtml";
}
<link href="~/BSys3Styles/CSS/style_form.css" rel="stylesheet" />
<style>
    .tooltip > .tooltip-inner {
        background-color: #f00;
    }

    .tooltip > .tooltip-arrow {
        border-top-color: #f00 !important;
    }
    #textErr {
        font-size: 11px !important;
        margin-top: -3px !important;
    }
</style>
<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive" style="height:79vh">
                    <div class="title_corp"> <h3> نقاط البيع  / إضافة </h3></div>
                    <div class="subtitle_corp"> تمكنك الصفحة من إضافة بنك جديد </div>
                    <div class="hr_60"></div>
                    <div class="hr_80"></div>
                    <div class="corp_page">
                        <div class="page_content" style="float:left;width:100%">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal" style="margin-top:15px;min-height:35%">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="row">
                                        <div class="col-lg-6 offset-lg-6 col-md-12" style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">الفرع</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-5 padding_right_none">
                                                    @Html.DropDownList("CR_Cas_Sup_SalesPoint_Brn_Code", null,"", htmlAttributes: new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">الحساب</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-5 padding_right_none">
                                                    @*@Html.DropDownList("CR_Cas_Sup_Bank_Ar_Name",new SelectList(""), htmlAttributes: new { @class = "form-control" })*@
                                                    @Html.DropDownList("CR_Cas_Sup_SalesPoint_Bank_Code", null,"", htmlAttributes: new { @class = "form-control" })
                                                    <div><span id="textErr">@ViewBag.BankCode</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">رقم الحساب</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-5 padding_right_none">
                                                    <input type="text" id="CR_Cas_Sup_Bank_Account_No" name="CR_Cas_Sup_Bank_Account_No" class="form-control" autocomplete="off" value="@ViewBag.Account_No" readonly />
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    

                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">البنك</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-5 padding_right_none">
                                                    @if (ViewBag.CR_Mas_Sup_BankVal == "")
                                                    {
                                                        @Html.DropDownList("CR_Mas_Sup_Bank", new SelectList(""), htmlAttributes: new { @class = "form-control" })
                                                    }
                                                    else
                                                    {
                                                        @Html.DropDownList("CR_Mas_Sup_Bank", new SelectList(""), htmlAttributes: new { @class = "form-control" })
                                                    }


                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    


                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">رقم نقطة البيع</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-5 padding_right_none">
                                                    @Html.EditorFor(model => model.CR_Cas_Sup_SalesPoint_Bank_No, new { htmlAttributes = new { @class = "form-control", maxlength = "20", @autocomplete = "off" } })
                                                    <div><span id="textErr">@ViewBag.SPnumber</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">وصف نقطة البيع عربي</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-8 padding_right_none">
                                                    @Html.EditorFor(model => model.CR_Cas_Sup_SalesPoint_Ar_Name, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @autocomplete = "off" } })
                                                    <div><span id="textErr">@ViewBag.ArName</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 offset-md-6" style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">وصف نقطة البيع إنجليزي</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-8 padding_right_none">
                                                    @Html.EditorFor(model => model.CR_Cas_Sup_SalesPoint_En_Name, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @autocomplete = "off" } })
                                                    <div><span id="textErr">@ViewBag.EngName</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row" hidden>
                                        <div class="col-md-6 offset-md-6 " style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-4 padding_left_none">
                                                    <label class="control-label">رصيد نقطة البيع</label><label id="asterisk">*</label>
                                                </div>
                                                <div class="col-md-3 padding_right_none">
                                                    @Html.EditorFor(model => model.CR_Cas_Sup_SalesPoint_Balance, new { htmlAttributes = new { @class = "form-control", maxlength = "10" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12" style="height: 43px;">
                                            <div class="row">
                                                <div class="col-md-2 padding_left_none">
                                                    <label class="control-label">ملاحظات</label>
                                                </div>
                                                <div class="col-md-7 padding_right_none">
                                                    @Html.EditorFor(model => model.CR_Cas_Sup_SalesPoint_Reasons, new { htmlAttributes = new { @class = "form-control", maxlength = "100", @autocomplete = "off" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-50" style="margin-top: 55px; margin-bottom: 0px;">
                                        <input type="submit" name="save" value="حفظ" class="btn btn-primary waves-effect" style="float:right;" />
                                    </div>
                                    <div class="col-md-6 col-50" style="margin-top: 55px; margin-bottom: 0px;">
                                        <a href="/CasSalesPoint/Index/" class="btn btn-primary waves-effect" style="float:left;">انهاء</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
        window.addEventListener("load", function () {

            if ('@TempData["TempModel"]'!="") {
                toastr.success("تم الحفظ بنجاح");
            }

        });

        ////$(document).ready(function () {
        ////    $("#CR_Mas_Sup_Bank").change(function () {
        ////        $.get("/CasSalesPoint/getsalespointlist", { code: $("#CR_Mas_Sup_Bank").val() }, function (data) {
        ////            $("#CR_Cas_Sup_SalesPoint_Bank_Code").empty();
        ////            $.each(data, function (index, row) {
        ////                $("#CR_Cas_Sup_SalesPoint_Bank_Code").append("<option value= '" + row.CR_Cas_Sup_Bank_Code + "'>" + row.CR_Cas_Sup_Bank_Ar_Name + "</option>")
        ////            });
        ////        });
        ////    })
        ////});

        $(document).ready(function () {
            $("#CR_Cas_Sup_SalesPoint_Bank_Code").change(function () {
                $.get("/CasSalesPoint/GetAccountNumber", { code: $("#CR_Cas_Sup_SalesPoint_Bank_Code").val() }, function (data) {
                    $("#CR_Cas_Sup_Bank_Account_No").empty();
                    document.getElementById('CR_Cas_Sup_Bank_Account_No').value = data;
                });
            })
        });

        $(document).ready(function () {
            $("#CR_Cas_Sup_SalesPoint_Bank_Code").change(function () {
                $.get("/CasSalesPoint/GetBankName", { code: $("#CR_Cas_Sup_SalesPoint_Bank_Code").val() }, function (data) {
                    $("#CR_Mas_Sup_Bank").empty();
                    $.each(data, function (index, row) {
                        $("#CR_Mas_Sup_Bank").append("<option value= '" + row.CR_Mas_Sup_Bank_Code + "'>" + row.CR_Mas_Sup_Bank_Ar_Name + "</option>")
                    });
                });
            })
        });
</script>
