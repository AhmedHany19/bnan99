@model IEnumerable<RentCar.Models.CR_Cas_Sup_SalesPoint>

<div class="responsive-table-plugin">
    <div class="table-rep-plugin">
        <div class="table-responsive" data-pattern="priority-columns" style="border:none;">
            <div id="dtBasicExample_print">
                <table id="myTable" class="table table-striped mb-0" style="cursor:pointer">
                    <thead>
                        <tr>
                            <th hidden>
                                رمز نقطة البيع
                            </th>
                            <th width="14%">
                                رقم نقطة البيع
                            </th>
                            <th width="20%">
                                إسم نقطة البيع
                            </th>
                            <th width="20%">
                                الفرع
                            </th>
                            <th width="20%">
                                البنك
                            </th>

                            <th width="21%">
                                إسم الحساب
                            </th>


                            <th width="7%">
                                الحالة
                            </th>

                        </tr>
                    </thead>
                    <tbody id="tbl">
                        @foreach (var item in Model)
                        {
                            if (item.CR_Cas_Sup_SalesPoint_Status == "A")
                            {
                                <tr>
                                    <td hidden>
                                        @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)
                                    </td>
                                    <td width="14%" style="text-align:center">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Bank_No)
                                        </a>
                                    </td>
                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Ar_Name)
                                           
                                        </a>
                                    </td>
                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Ar_Short_Name)
                                            @if (item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Status == "H")
                                            {
                                                <span id="statOfBranch"> (الفرع موقوف) </span>
                                            }
                                        </a>
                                    </td>

                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Bank.CR_Mas_Sup_Bank.CR_Mas_Sup_Bank_Ar_Name)

                                        </a>
                                    </td>

                                    <td width="21%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Bank.CR_Cas_Sup_Bank_Ar_Name)

                                        </a>
                                    </td>

                                    <td align="center" width="7%">
                                        @if (item.CR_Cas_Sup_SalesPoint_Status == "A")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                                <label style="color:green">نشط</label>
                                            </a>
                                        }
                                        else if (item.CR_Cas_Sup_SalesPoint_Status == "H")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                                <label style="color:crimson">موقوف</label>
                                            </a>
                                        }
                                        else if (item.CR_Cas_Sup_SalesPoint_Status == "D")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)">
                                                <label style="color:red">محذوف</label>
                                            </a>
                                        }


                                    </td>

                                </tr>
                            }
                            else
                            {
                                <tr style="color:red!important">
                                    <td hidden>
                                        @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)
                                    </td>
                                    <td width="14%" style="text-align:center">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Bank_No)
                                        </a>
                                    </td>
                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Ar_Name)
                                           

                                        </a>
                                    </td>
                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Ar_Name)
                                            @if (item.CR_Cas_Sup_Branch.CR_Cas_Sup_Branch_Status == "H")
                                            {
                                                <span id="statOfBranch"> (الفرع موقوف) </span>
                                            }

                                        </a>
                                    </td>

                                    <td width="20%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Bank.CR_Mas_Sup_Bank.CR_Mas_Sup_Bank_Ar_Name)

                                        </a>
                                    </td>

                                    <td width="21%">
                                        <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                            @Html.DisplayFor(modelItem => item.CR_Cas_Sup_Bank.CR_Cas_Sup_Bank_Ar_Name)

                                        </a>
                                    </td>

                                    <td align="center" width="7%">
                                        @if (item.CR_Cas_Sup_SalesPoint_Status == "A")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                                <label style="color:green">نشط</label>
                                            </a>
                                        }
                                        else if (item.CR_Cas_Sup_SalesPoint_Status == "H")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                                <label style="color:crimson">موقوف</label>
                                            </a>
                                        }
                                        else if (item.CR_Cas_Sup_SalesPoint_Status == "D")
                                        {
                                            <a href="~/CasSalesPoint/edit/?id=@Html.DisplayFor(modelItem => item.CR_Cas_Sup_SalesPoint_Code)" style="color:red!important">
                                                <label style="color:red">محذوف</label>
                                            </a>
                                        }
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>



        </div>
    </div>
</div>

<style>
    #statOfBranch {
        color: red;
        margin-right:4px !important;
    }
</style>