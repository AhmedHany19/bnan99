@model RentCar.Models.CR_Cas_Company_Contract

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
  
    label {
        float: none;
    }

    .radio_top {
        float: right;
        margin-right: 10px;
        line-height: 0.8
    }

    #save-btn {
        margin-right: 10px;
        background-color: #5bc0de !important;
        width: 80px;
        margin-left: 20px;
        margin-bottom: 10px;
    }

    #bttn {
        float: right;
        width: 80px;
        background-color: #5bc0de !important;
        margin-left: 20px;
    }

    #btn-confirm {
        float: right;
        width: 80px;
        margin-left: 20px;
    }

    .lbl {
        margin-right: 30px;
        font-size: 16px;
        font-family: 'Times New Roman';
    }

    .hidden {
        display: none
    }

    .text-danger {
        font-size: 12px;
        margin-right: 160px;
        font-family: 'Times New Roman';
    }

    .a {
        float: right;
        background-color: #5bc0de;
        width: 80px;
        height: 25px;
        padding-top: 5px;
        padding-right: 10px;
        font-size: 12px;
        font-family: times new roman;
    }

    .texterr {
        font-family: 'Times New Roman' !important;
        font-size: 14px !important;
        color: red !important;
        margin-right: 50% !important;
        height: 40px;
    }

    #asterisk {
        color: red;
        float: right;
        font-size: 15px !important;
        margin-right: 112px;
        margin-top: 5px;
        position: absolute;
        font-family: 'Times New Roman';
    }

    .title_corp {
        font-family: 'Times New Roman';
        font-size: 25px;
    }

    .subtitle_corp {
        padding-top: 3px !important;
        font-family: 'Times New Roman' !important;
        color: #083555;
    }
</style>
<div class="corp_content">
    <div class="title_corp"> العقود /  تعديل البيانات</div>
    <div class="subtitle_corp">تمكنك الصفحة من تعديل بيانات العقود</div>
    <div class="hr_60"></div>
    <div class="hr_80"></div>
    <div class="corp_page">
        <div class="page_content">
            <div class="text-danger" id="Message" style="margin-Top: 10px; margin-right: 300px;">@TempData["TempModif"]</div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                    <div class="form-horizontal" style="height:50%">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CR_Cas_Company_Contract_No)
                        @Html.HiddenFor(model=>model.CR_Cas_Company_Contract_Lessor)

                        <div class="col-md-8 offset-md-4">
                            <label class="label_form col-md-3" style="float:right">رقم العقد</label>
                            @Html.TextBoxFor(model => model.CR_Cas_Company_Contract_No, new { @class = "input_form col-md-6", style = "float:right;width:40%", @readonly = "readonly" })
                        </div>


                        <div class="col-md-4" style="margin-top:10px;">
                            <label class="label_form col-md-3" style="float:right">نهايته</label>
                            <input class="input_form text-box single-line" data-val="true" style="width:55%"
                                   id="CR_Cas_Company_Contract_End_Date" name="CR_Cas_Company_Contract_End_Date" type="date" value="@ViewBag.EndDate">
                        </div>
                        <div class="col-md-4" style="margin-top:10px;">
                            <label class="label_form col-md-3" style="float:right">بدايته</label>
                            <input class="input_form text-box single-line" data-val="true" style="width:55%"
                                   id="CR_Cas_Company_Contract_Start_Date" name="CR_Cas_Company_Contract_Start_Date" type="date" value="@ViewBag.StartDate">
                        </div>

                        <div class="col-md-4" style="margin-top:10px;">
                            <label class="label_form col-md-5" style="float:right">تاريخه</label>
                            <input class="input_form text-box single-line" data-val="true" style="width:55%"
                                   id="CR_Cas_Company_Contract_Date" name="CR_Cas_Company_Contract_Date" type="date" value="@ViewBag.DocDate">
                        </div>


                        <div class="form-group">
                            <div class="col-md-4">
                                <div class="row">
                                    <label class="label_form col-md-4" style="float:right"> نسبةالضريبة</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.CR_Cas_Company_Contract_Tax_Rate, new { htmlAttributes = new { @class = "input_form", style = "width:95%;", maxlength = "10", autocomplete = "off" } })
                                        <div class="texterr"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <label class="label_form col-md-4" style="float:right"> نسبةالخصم</label>
                                    <div class="col-md-8" style="padding-right:0px!important;">
                                        @Html.EditorFor(model => model.CR_Cas_Company_Contract_Discount_Rate, new { htmlAttributes = new { @class = "input_form", style = "width:95%;", maxlength = "10", autocomplete = "off" } })
                                    </div>
                                    <div class="texterr"></div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <label class="label_form col-md-4" style="float:right"> رسوم الإشتراك</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.CR_Cas_Company_Contract_Annual_Fees, new { htmlAttributes = new { @class = "input_form", style = "width:95%;", maxlength = "10", autocomplete = "off" } })
                                    </div>
                                    <div class="texterr"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <label class="label_form col-md-2" style="float:right">الملاحظات</label>
                            @Html.TextBoxFor(model => model.CR_Cas_Company_Contract_Reasons, new { @class = "input_form col-md-10", style = "float:right;" })
                        </div>


                        <div class="row" style="width:100%;min-height:20px">
                           
                            <div class="col-md-5" style="float:right">
                                <div class="">
                                    <div class="radio_top">
                                        @*<input type="checkbox" id="Price" name="Price" style="float:right;margin-left:4px;width:13px;height:13px;">*@
                                        @Html.CheckBox("Price", new { htmlAttributes = new { @class = "form-control", style = "float:right;margin-left:4px;width:13px;height:13px;" } })
                                        <label for="css" style="float: right; font-size: 0.75rem">قيمة العقد</label>
                                    </div>
                                </div>
                            </div>

                        </div>





                        <div>
                            @{
                                Html.RenderAction("PartialViewBnanFees");
                            }
                        </div>

                         <div class="col-md-6" style="margin-top:30px">
                            <div style="height:50px;"></div>
                            <a href="/Company_Contract/Index/" class="btn" style="font-family:'Times New Roman';float:left;font-size:15px!important;width: 70px !important;padding-top:4px;height:30px; background-color: #F3B161; padding-right: 22px; border-radius: 0px; color: white;">انهاء</a>
                        </div>
                         <div class="col-md-6" style="margin-top:30px;">
                             <div style="height:50px;"></div>
                             @if (ViewBag.Status == "N")
                             {
                                 <input type="submit" name="save" class="submit_btn" id="add_btn" value="حفظ" />
                                 <input type="submit" name="delete" class="submit_btn" id="delete_btn" value="حذف" style="margin-right:15px;cursor:no-drop" disabled />
                             }
                             else if (ViewBag.Status == "A")
                             {
                                 <input type="submit" name="save" class="submit_btn" id="add_btn" value="حفظ" disabled style="cursor:no-drop" />
                                 <input type="submit" name="delete" class="submit_btn" id="delete_btn" value="حذف" style="margin-right:15px;" />
                             }
                            
                         </div>

                    </div>
            }

        </div>
    </div>
</div>