@model RentCar.Models.CR_Cas_Administrative_Procedures
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutSys3.cshtml";
}

<style>
    .tooltip > .tooltip-inner {
        background-color: #f00;
    }

    .tooltip > .tooltip-arrow {
        border-top-color: #f00 !important;
    }
</style>
<style>
    #date_btn1 {
        font-size: 0 !important;
        background: url('../../BSys3Styles/Images/icone_calendre.png') center 3px no-repeat;
        width: 30px;
        border: none;
        border-left: 0;
        height: 27px;
        position: absolute;
        left: 17px;
        margin-top: -29px;
    }
</style>
<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: transparent !important;
        border: 0 !important;
        font-weight: 700;
        color: #0288C7 !important;
        opacity: 1;
    }

    .form-control {
        border-color: #4A80B4;
        color: #4A80B4;
        display: block;
        width: 100%;
        height: calc(2.25rem + 2px);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control {
        border-color: #4A80B4;
        color: #4A80B4;
    }

    input {
        box-shadow: none !important;
        font-family: inherit !important;
    }

    button, input {
        overflow: visible;
    }

    input, button, select, optgroup, textarea {
        margin: 0;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
    }

    label {
        font-weight: 700;
        font-size: 15px !important;
    }

    .subtitle_corp {
        font-family: 'Cairo', sans-serif !important;
        font-weight: 700;
        color: #323232;
    }

    .btn-primary {
        background-color: #4B80B4 !important;
        border-color: #4B80B4 !important;
        font-family: "Cairo",sans-serif !important;
        font-size: .9rem !important;
    }

    .btn {
        min-width: 75px;
        padding: 0.45rem 0 !important;
    }
    
</style>
<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive container" style="margin-top: 60px; min-height:55vh !important;">
                    <div class="title_corp"><h3> تغذية الصندوق / قبول أو رفض</h3></div>
                    <div class="subtitle_corp">تمكنك الصفحة من قبول أو رفض تغذية صندوق الفرع الحالي و رصيد المستخدم </div>
                    <div class="hr_60 mt-2"></div>
                    <div class="hr_80"></div>
                    <div class="corp_page">
                        <div class="page_content" style="float:left;width:100%">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(Model => Model.CR_Cas_Administrative_Procedures_Lessor)
                                @*@Html.HiddenFor(Model => Model.CR_Cas_User_Information_Id)*@
                                <div class="form-horizontal mt-3">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="margin-top:10px;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label" style="margin-top: 7px">رقم التغذية</label>
                                                </div>
                                                <div class="col-md-5">
                                                    @Html.EditorFor(model => model.CR_Cas_Administrative_Procedures_No, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="margin-top:10px;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label" style="margin-top: 7px">مغذي الصندوق</label>
                                                </div>
                                                <div class="col-md-5">
                                                    <input class="form-control text-box single-line" data-val="true"
                                                           id="UserName" name="UserName" type="text" value="@ViewBag.UserName" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="margin-top:10px;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label" style="margin-top: 7px">تاريخ التغذية</label>@*<label id="asterisk">*</label>*@
                                                </div>
                                                <div class="col-md-5">
                                                    <input class="form-control text-box single-line" id="TransferDate" name="TransferDate" type="text" value="@ViewBag.TransferDate" data-inputmask="'alias': 'yyyy/mm/dd'" style="width:100%" readonly>
                                                    @*<input name="b1" type="button" class="hijri-date-input2" id="date_btn1" onblur="affich_affich_1(event)" readonly />*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-6 offset-md-6 " style="margin-top:10px;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <label class="control-label" style="margin-top: 7px">مبلغ التغذية</label>@*<label id="asterisk">*</label>*@
                                                </div>
                                                <div class="col-md-5">
                                                    @*<input type="text" name="TransferedVal" id="TransferedVal" value="@Model.CR_Cas_Administrative_Procedures_Value" class="form-control" />*@
                                                    @*@{
                                                            var convertToFloat = (float)Model.CR_Cas_Administrative_Procedures_Value;
                                                            var Administrative_Procedures_Value = convertToFloat.ToString("N0");
                                                        }*@


                                                    @Html.EditorFor(model => model.CR_Cas_Administrative_Procedures_Value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "TransferedVal" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 offset-md-6" style="margin-top:10px;">
                                            <div class="row">
                                                <div class="col-md-2" >
                                                    <label for="Reasons" class="control-label" style="margin-top: 7px">الملاحظات</label>
                                                </div>
                                                <div class="col-md-10" >
                                                    <textarea  type="text" name="Reasons" id="Reasons" maxlength="100" value="@ViewBag.Reasons" class="form-control" style="height: 88px; width: 350px; resize: none; margin-right: 55px;" ></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>


                                <div class="row">
                                    <div class="col-md-1" style="margin-top:50px;margin-bottom:10px;">
                                        <input type="submit" name="save" value="قبول" class="btn btn-primary waves-effect" style="float:right;" />
                                    </div>
                                    <div class="col-md-1" style="margin-top:50px;margin-bottom:10px;">
                                        <input type="submit" name="Refuse" value="رفض" class="btn btn-primary waves-effect" style="float:right;" />
                                    </div>
                                    <div class="col-md-10 col-50" style="margin-top:50px;margin-bottom:10px;">
                                        <a href="~/BranchHome/BranchStat" class="btn btn-primary waves-effect">انهاء</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    function affich_affich_1(e) {
        var date = e.target.value;
        document.getElementById("TransferDate").value = date;
    }
    function affich_btn_1(e) {
        var date = e.target.value;
        document.getElementById("date_btn1").value = date;
    }

</script>

