                                                <td>
                                                    
                                                    @DateTime.Parse(@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_End_Date).ToString()).ToShortDateString()
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Annual_Fees)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Service_Fees)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Discount_Rate)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Tax_Rate)
                                                </td>

                                                <td style="text-align:center">
                                                    @if (item.CR_Mas_Basic_Contract_Status == "A")
                                                    {
                                                        <label>نشط</label>
                                                    }
                                                    else if (item.CR_Mas_Basic_Contract_Status == "H")
                                                    {
                                                        <label>موقوف</label>
                                                    }
                                                    else if (item.CR_Mas_Basic_Contract_Status == "D")
