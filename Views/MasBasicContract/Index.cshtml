    <div class="title_corp"> عقود شركات تأجير السيارات / عرض البيانات </div>
    <div class="subtitle_corp"> من خلال هذه الصفحة يمكنك الإطلاع على عقود شركات تأجير السيارات كما يمكنك إضافة عقود جديدة</div>
    <div class="hr_60"></div>
    <div class="hr_80"></div>
    <div class="corp_page">
        <div class="page_content">
            <form method="post">
                <div class="form_bg">
                    <div class="href_layout" style="margin-bottom:7px!important;">
                        <a href="/Home/index" class="btn_form"><i class="fa fa-times" title="إغلاق"></i></a>
                        <a href="/MAsBasicContract/Create" class="btn_form"><i class="fa fa-plus" title="إضافة سجل جديد"></i></a>
                        <input type="submit" name="excelCall" title="ترحيل البيانات للإكسل" class="btn_form btn_exel" value="Excel" style="padding-right:4px;" />
                        <a href="" class="btn_form" title="طباعة" onclick="printDiv()"><i class="fa fa-print"></i></a>

                        <a href="" class="btn_form" title="بحث"><i class='fa fa-search'></i></a>
                            <img src="~/images/srch.png" id="SrchImg" />
                            <input class="form-control" type="text" id="inputtext" name="TxtSearch" placeholder="بحث..." />
                        <script>
                            $(document).ready(function () {
                                $("#inputtext").on("keyup", function () {
                                    var value = $(this).val().toLowerCase();
                                    $("#tbl tr").filter(function () {
                                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                    });
                                });
                            });
                        </script>
                    </div>
                    <div class="table-responsive" style="width:99%; height:300px; overflow:auto;border: 1px solid #4A80B3;">
                        <div id="dtBasicExample_print">
                            <table class="table table-bordered table-striped " id="myTable">
                                <thead>
                                    <tr>
                                        <th style="" hidden="hidden" onclick="sortTable(1)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_No)
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(2)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Year)
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(3)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Sector)
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(4)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Code)
                                        </th>
                                        <th style="margin-bottom:0px!important;width:30%;" onclick="sortTable(14)">
                                            <span>الشركة</span>
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(5)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Com_Code)
                                        </th>
                                        <th style="width: 10%;"  onclick="sortTable(6)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Date)
