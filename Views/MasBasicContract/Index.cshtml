                                        <th style="width: 10%;" onclick="sortTable(13)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Status)
                                        </th>
                                        <th style="width: 30%;" onclick="sortTable(14)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Reasons)
                                        </th>
                                        @*<th style="" onclick="sortTable(15)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Com_Lessor.CR_Mas_Com_Lessor_Logo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CR_Mas_Sup_Sector.CR_Mas_Sup_Sector_Ar_Name)
                                        </th>*@
                                       
                                    </tr>
                                </thead>
                                <tbody id="tbl">
                                    @if (Session["ST_1401_update"].ToString() == "true")
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_No)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Year)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Sector)
                                                </td>
                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Code)
                                                </td>
                                                <td>
                                                    <a href="~/MasBasicContract/edit/?id1=@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_No)">
                                                        @Html.DisplayFor(modelItem => item.CR_Mas_Com_Lessor.CR_Mas_Com_Lessor_Ar_Short_Name)
                                                        </a>
                                                </td>

                                                <td hidden="hidden">
                                                    @Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Com_Code)
