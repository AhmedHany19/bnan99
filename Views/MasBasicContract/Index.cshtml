                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Service_Fees)
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(11)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Discount_Rate)
                                        </th>
                                        <th style="" hidden="hidden" onclick="sortTable(12)">
                                            @Html.DisplayNameFor(model => model.CR_Mas_Basic_Contract_Tax_Rate)
