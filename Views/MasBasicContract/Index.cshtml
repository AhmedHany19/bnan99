                                                <td>
                                                    <a href="~/MasBasicContract/edit/?id1=@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_No)"> 
                                                        @DateTime.Parse(@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Date).ToString()).ToShortDateString()
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="~/MasBasicContract/edit/?id1=@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_No)">
                                                        
                                                        @DateTime.Parse(@Html.DisplayFor(modelItem => item.CR_Mas_Basic_Contract_Start_Date).ToString()).ToShortDateString()
